@model prestamolibrosnet.Models.Calificacion

@{
    ViewData["Title"] = "Create";
}

<h2>Evaluación del Préstamo</h2>

<h4>Calificación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <label>La "Calificación" va del 1 al 5, siendo 1 la nota más baja.</label>
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Aca va el nombre del libro</label>
                 </div>
            <div class="form-group">
                <label>Calificación</label>
                <input asp-for="evaluacion" class="form-control" />
                <span asp-validation-for="evaluacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Observaciones</label>
                <input asp-for="observacion" class="form-control" />
                <span asp-validation-for="observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
